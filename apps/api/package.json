{
  "name": "@no-blogg/api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "typeorm": "typeorm-ts-node-commonjs",
    "db:migrate": "npm run typeorm migration:run -- -d src/data-source.ts",
    "db:migrate:generate": "npm run typeorm migration:generate -- -d src/data-source.ts",
    "db:migrate:create": "npm run typeorm migration:create",
    "db:migrate:revert": "npm run typeorm migration:revert -- -d src/data-source.ts",
    "db:seed": "tsx src/database/seed.ts"
  },
  "dependencies": {
    "@no-blogg/types": "workspace:*",
    "@no-blogg/utils": "workspace:*",
    "typeorm": "^0.3.19",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  }
}
